<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.PostgreSQLMapper">

    <!-- Select a single user by ID -->
    <select id="findById" resultType="java.lang.String" parameterType="String">
        SELECT id, username, email
        FROM users
        WHERE id = #{id}
    </select>

</mapper>
